# Next.js Standalone Deployment
FROM node:22-alpine

WORKDIR /app

# Standalone-Build kopieren
COPY .next/standalone ./
COPY .next/static ./.next/static
COPY public ./public

# Nur notwendige Dateien
COPY package*.json ./
RUN npm ci --production --ignore-scripts

ENV NODE_ENV=production
ENV PORT=3000

EXPOSE 3000

CMD ["node", "server.js"]
